<div class="mx-2 my-5 p-3 pt-5 round" id="completed">
  if completed.length > 0
    h3.text-light Completed&nbsp;&nbsp;#{completed.length}
    <div class="d-flex justify-content-end">
      <button data-toggle="collapse" href='#comp-task' class="btn btn-warning rounded-pill">
        <svg width="1.3em" height="1.3em" viewBox="0 0 16 16" class="bi bi-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M8 3.5a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5H4a.5.5 0 0 1 0-1h3.5V4a.5.5 0 0 1 .5-.5z"/>
          <path fill-rule="evenodd" d="M7.5 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0V8z"/>
        </svg>
      </button>
    </div>
    +addForm("comp-task","/completed")
    each item in completed
      div.card.my-3.round.mine-bg
        div(class="card-body",data-toggle="tooltip",data-placement="top",title="Completed Task")
          h5.card-title #{item.tTitle}
          p.card-text.font-italic #{item.tDescription}
        div.card-text.pt-4.pb-1
          <form method="post">
            div.row.justify-content-around
              <button type="submit" formaction='/done/delete/#{item.id}' formmethod="post" class="btn btn-warning rounded-pill"  data-toggle="tooltip" data-placement="top" title="delete task">
                <svg width="1.3em" height="1.3em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                </svg>
              </button>
          </form>
  else 
    <div>
      h3.text-light Completed
      <div class="d-flex justify-content-end">
        <button data-toggle="collapse" href='#comp-task' class="btn btn-warning rounded-pill">
          <svg width="1.3em" height="1.3em" viewBox="0 0 16 16" class="bi bi-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M8 3.5a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5H4a.5.5 0 0 1 0-1h3.5V4a.5.5 0 0 1 .5-.5z"/>
            <path fill-rule="evenodd" d="M7.5 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0V8z"/>
          </svg>
        </button>
      </div>
      +addForm("comp-task","/completed")
      h5.text-light.mt-5 No tasks
    </div>
</div>