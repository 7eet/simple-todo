extends ../layout/layout.pug
block content
  <div id="create-task" class="py-2 text-right">
    <a href="#add-task" data-toggle="collapse" class="btn btn-warning">
      |add task
    </a>
  </div>

  <div id="add-task" class="collapse p-2">
    <form method="post" action="/" class="p-3 text-light">
      <div class="form-group form-row my-3" id="title">
        <label for="tTitle">Title</label>
        <input type="text" id="tTitle" class="form-control" name="tTitle" required>
      </div>
      <div class="form-group form-row my-3" id="description">
        <label for="tDescription">Short Description</label>
        <textarea id="tDescription" class="form-control" name="tDescription" rows="3" cols="5">
        </textarea>
      </div>
      <div class="form-group my-3">
        <button class="btn btn-light" type="submit">add it</button>
      </div>
    </form>
  </div>


  if data.length > 0

    each item in data
      - if (item.status == "completed")
        div.card.my-3.round.mine-bg.mine-text
          div(class="card-body",data-toggle="tooltip",data-placement="top",title="Completed Task")
            h4.card-title #{item.tTitle}
            p.card-text #{item.tDescription}
          div.card-footer
            div.row.justify-content-around
              p.text-muted status: #{item.status}
              <a href='/delete/#{item.id}' class="btn btn-warning rounded-pill"  data-toggle="tooltip" data-placement="top" title="delete this task">
                <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                </svg>
              </a>

      - else
        div.card.my-3.round.mine-bg.mine-text
          div(class="card-body",data-toggle="tooltip",data-placement="top",title="In-progress")
            h4(class="card-title") #{item.tTitle}
            p.card-text #{item.tDescription}
          div.card-footer
            div.row.justify-content-around
              p.text-muted status: #{item.status}
              <a href='/completed/#{item.id}' class="btn btn-warning rounded-pill" data-toggle="tooltip" data-placement="top" title="completed this task">
                <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-check2-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M15.354 2.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3-3a.5.5 0 1 1 .708-.708L8 9.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
                  <path fill-rule="evenodd" d="M8 2.5A5.5 5.5 0 1 0 13.5 8a.5.5 0 0 1 1 0 6.5 6.5 0 1 1-3.25-5.63.5.5 0 1 1-.5.865A5.472 5.472 0 0 0 8 2.5z"/>
                </svg>
              </a>

  else 
    <div class="my-3">
      h3.text-muted You have 0 tasks.
    </div>